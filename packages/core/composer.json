{
    "name": "ameos/core",
    "description": "Core of Ameos",
    "keywords": [
        "ameos",
        "core"
    ],
    "homepage": "https://github.com/ameos/core",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Kim Sebastian Kornwinkel",
            "email": "kornwinkel.kim@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Ameos\\Core\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ameos\\Core\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ameos\\Core\\CoreServiceProvider"
            ],
            "aliases": {
                "Core": "Ameos\\Core\\CoreFacade"
            }
        }
    }
}
